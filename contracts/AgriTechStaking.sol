contract StakingContract {
    using SafeMath for uint256;
    
    IERC20 public mainToken;
    IERC20 public rewardToken;
    uint256 public totalRewardsPaid;
    address public owner;
    uint256 public totalStaked;
    uint256 public rewardPerSecond;
    mapping (address => uint256) public stakedBalances;
    mapping (address => uint256) public lastClaimedTime;

    uint256 revenue = 1000000 * 1e18; // $1M in USDT
    uint256 totalSupply = 850000000 * 1e18;
    uint256 rewardPerMonth = revenue.mul(1e18).div(totalSupply);
    uint256 rewardPerSec = rewardPerMonth.div(2592000); // reward per second

    event Staked(address indexed user, uint256 amount);
    event Unstaked(address indexed user, uint256 amount);
    event Distributed(address indexed user, uint256 amount);

    constructor(IERC20 _mainToken, IERC20 _rewardToken) {
        mainToken = _mainToken;
        rewardToken = _rewardToken;
        owner = msg.sender;
    }

    function approveMainToken(uint256 amount) external {
        require(amount > 0, "Amount must be greater than zero");
        mainToken.approve(address(this), amount);
    }

    function stake(uint256 amount) external {
        require(amount > 0, "Amount must be greater than zero");
        require(mainToken.balanceOf(msg.sender) >= amount, "Insufficient balance");

        updateRewards(msg.sender);
        
        mainToken.transferFrom(msg.sender, address(this), amount);
        stakedBalances[msg.sender] = stakedBalances[msg.sender].add(amount);
        totalStaked = totalStaked.add(amount);
        
        emit Staked(msg.sender, amount);
    }

    function unstake(uint256 amount) external {
        require(amount > 0, "Amount must be greater than zero");
        require(stakedBalances[msg.sender] >= amount, "Insufficient staked balance");

        updateRewards(msg.sender);
        
        mainToken.transfer(msg.sender, amount);
        stakedBalances[msg.sender] = stakedBalances[msg.sender].sub(amount);
        totalStaked = totalStaked.sub(amount);
        
        emit Unstaked(msg.sender, amount);
    }

    function claimReward() external {
        require(stakedBalances[msg.sender] > 0, "No staked balance");
        uint256 reward = calculateReward(msg.sender);
        require(reward > 0, "No reward to claim");
        rewardToken.transfer(msg.sender, reward);
        lastClaimedTime[msg.sender] = block.timestamp;
        totalRewardsPaid = totalRewardsPaid.add(reward);
    }

    function calculateReward(address staker) public view returns (uint256) {
        uint256 stakerRewardPerSec = rewardPerSec.mul(stakedBalances[staker]);
        uint256 timeDiff = block.timestamp.sub(lastClaimedTime[staker]);
        uint256 reward = stakerRewardPerSec.mul(timeDiff);
        return reward;
    }

    function updateRewards(address account) internal {
        uint256 currentTime = block.timestamp;
        if (account != address(0)) {
            uint256 timeDelta = currentTime.sub(lastClaimedTime[account]);
            uint256 stakedBalance = stakedBalances[account];
            uint256 earnedReward = rewardPerSecond.mul(timeDelta).mul(stakedBalance);
            rewardToken.transfer(account, earnedReward);
        }
        lastClaimedTime[account] = currentTime;
    }

}